{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "nodenext",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "verbatimModuleSyntax": true,
    "noUncheckedIndexedAccess": true,

    "allowImportingTsExtensions": true
  },
  "include": ["src", "test"],
  "exclude": ["node_modules"]
}
